<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->

    <%- include('./partials/navbarSection')  %>

    <!-- Header -->
    
    <%- include('./partials/headerSection')  %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->

      <%- include('./partials/aboutSection')  %> 
      
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
  <div class="ps-col l6 ps-padding-large">
    <h1 class="ps-center">Nuestro Menu</h1>
    <br />
    <ul>
    <% for(let i=0; i < menu.length; i++) {%>
      <li>
        <h4>
          <%= menu[i].name %>         
        </h4>
        <p class="ps-text-grey">
         <%= menu[i].description + ' ' + menu[i].price %>
        </p>
      </li>
   <% } %>
  </ul>
    <br />
  </div>

  <div class="ps-col l6 ps-padding-large ps-img-menu">
    <img
      src="/images/menu.jpg"
      class="ps-round ps-image ps-opacity-min"
      alt="Menu"
    />
  </div>
    </div>     

      <!-- Footer -->
      <footer class="ps-center ps-light-grey ps-padding-32">
        <p>Powered by Pimienta & Sal</p>
      </footer>
    </div>
  </body>
</html>
